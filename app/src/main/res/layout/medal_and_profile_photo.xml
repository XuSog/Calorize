<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".Medal_and_photo">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="80px"
            android:textColor="#DA9552"
            android:gravity="center"
            android:text="Healthy Diet Medals">
            
        </TextView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            tools:context=".EnergyActivity"> </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="#F7CA65"
            android:alpha="0.5"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            tools:context=".EnergyActivity">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Keep it up with your healthy daily intake of food, complete more tasks to unlock new profile icon!"
                android:textColor="@color/black"
                android:textSize="18sp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            tools:context=".EnergyActivity"> </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/one_day_medal"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/lock">

            </ImageView>

            <ImageView
                android:id="@+id/three_day_medal"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/lock">

            </ImageView>
           
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/B1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="Keep healthy diet for 1 day (Uncompleted)"
                android:gravity="center"
                ></TextView>
            <TextView
                android:id="@+id/B2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="Keep healthy diet for 3 day (Uncompleted)"
                android:gravity="center"
                ></TextView>
     


    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/seven_day_medal"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/lock">

            </ImageView>

            <ImageView
                android:id="@+id/one_month_medal"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/lock">

            </ImageView>
            



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/B3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:text="Keep healthy diet for 7 day (Uncompleted)"
                    android:gravity="center"
                    ></TextView>
                <TextView
                    android:id="@+id/B4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:text="Keep healthy diet for 30 day (Uncompleted)"
                    android:gravity="center"
                    ></TextView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:context=".EnergyActivity"> </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#DA9552"
                android:textSize="80px"
                android:gravity="center"
                android:text="Profile Picture Unlocked">
                
            </TextView>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                tools:context=".EnergyActivity"> </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="#F7CA65"
                android:layout_height="70dp"
                android:alpha="0.5"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                tools:context=".EnergyActivity">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18sp"
                android:text="Keep it up with the hard work and enjoy the following Icon!">
                
            </TextView> </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                tools:context=".EnergyActivity"> </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp" >
                    <ImageView
                        android:id="@+id/p00"
                        android:layout_width="0dp"
                        android:layout_height="133dp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:background="@drawable/lock">
                    </ImageView>

                    <ImageView
                        android:id="@+id/p01"
                        android:layout_width="0dp"
                        android:layout_height="133dp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:background="@drawable/lock">
                    </ImageView>
                    <ImageView
                        android:id="@+id/p10"
                        android:layout_width="0dp"
                        android:layout_height="133dp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:background="@drawable/lock">
                    </ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/b1"
                        android:layout_width="0dp"
                        android:layout_height="75dp"
                        android:layout_weight="1"
                        android:text="Set as Icon"
                        android:enabled="false">
                    </Button>
                    <Button
                        android:id="@+id/b2"
                        android:layout_width="0dp"
                        android:layout_height="75dp"
                        android:layout_weight="1"
                        android:text="Set as Icon"
                        android:enabled="false">
                    </Button>
                    <Button
                        android:id="@+id/b3"
                        android:layout_width="0dp"
                        android:layout_height="75dp"
                        android:layout_weight="1"
                        android:text="Set as Icon"
                        android:enabled="false">
                    </Button>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:id="@+id/p11"
                        android:layout_width="0dp"
                        android:layout_height="133dp"
                        android:layout_weight="1"
                        android:background="@drawable/lock">
                    </ImageView>

                    <ImageView
                        android:id="@+id/p20"
                        android:layout_width="0dp"
                        android:layout_height="133dp"
                        android:layout_weight="1"
                        android:background="@drawable/lock">
                    </ImageView>
                    <ImageView
                        android:id="@+id/p21"
                        android:layout_width="0dp"
                        android:layout_height="133dp"
                        android:layout_weight="1"
                        android:background="@drawable/lock">
                    </ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="30dp">
                    <Button
                        android:id="@+id/b4"
                        android:layout_width="0dp"
                        android:layout_height="75dp"
                        android:layout_weight="1"
                        android:text="Set as Icon"
                        android:enabled="false">
                    </Button>
                    <Button
                        android:id="@+id/b5"
                        android:layout_width="0dp"
                        android:layout_height="75dp"
                        android:layout_weight="1"
                        android:text="Set as Icon"
                        android:enabled="false">
                    </Button>
                    <Button
                        android:id="@+id/b6"
                        android:layout_width="0dp"
                        android:layout_height="75dp"
                        android:layout_weight="1"
                        android:text="Set as Icon"
                        android:enabled="false">
                    </Button>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>        
    </ScrollView>


</LinearLayout>